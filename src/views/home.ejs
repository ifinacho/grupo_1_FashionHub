<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FH - HOME</title>
    <link rel="shortcut icon" href="/img/logo/FashionHub-logo.png" type="image/png" />
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/norm-header-footer.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cherry+Swash&family=Lobster&display=swap" rel="stylesheet">
</head>

<body>
    <%- include('./partials/header.ejs') %>
        <main id="main-home">
            <img class="banner" src="/img/Banners/Sale-Off-pink.jpg" alt="Banner-ofertas">
            <article>
                <% products.forEach(product => {%>
                    <div id="article-div">
                        <img id="article__image" src="/img/productos/<%= product.image ? product.image : 'default-image.png' %>" alt="<%= product.name %>" title="<%= product.name %>">
                        <a id="article__anchor" href="/product-detail/<%= product.id %>">
                            <h2 id="article__h2"><%= product.name %></h2>
                            <button id="article__button">
                                <p id="article-button__p">Ver MÃ¡s</p>
                            </button>
                        </a>
                    </div>
                <%}) %>
            </article>
            <%- include('./partials/section-interest.ejs') %>
            <img class="anuncios" src="/img/Anuncios/Anuncio1.jpg" alt="anuncios">
        </main>
        <%- include('./partials/footer.ejs') %>
</body>

</html>