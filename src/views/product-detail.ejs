        <section class="section-product">
            <div class="section-product__div">
                <img src="/img/<%= product.image %>" alt="<%= product.name %>" title="<%= product.name %>">
            </div>
        </section>
        <section class="section-form">
            <form id="form" action="/shopping-cart" method="POST">
                <div id="form-title">
                    <h1><%= product.name %></h1>
                    <button id="button-heart"><i class="far fa-heart"></i></button>
                </div>
                <div>
                    <p id="form-price"><%= product.price %></p>
                </div>
                <div>
                    <p id="form-description"><%= product.description %></p>
                </div>
                <div class="form-radio">
                    <label id="form-color">Color:</label>
                    <label class="radio"><input type="radio" name="color" value="rojo"> Rojo</label>
                    <label class="radio"><input type="radio" name="color" value="amarillo"> Amarillo</label>
                    <label class="radio"><input type="radio" name="color" value="rosa"> Rosa</label>
                </div>
                <div class="form-radio">
                    <label id="form-talle">Talle:</label>
                    <label class="radio"><input type="radio" name="talle" value="small"> Small</label>
                    <label class="radio"><input type="radio" name="talle" value="medium"> Medium</label>
                    <label class="radio"><input type="radio" name="talle" value="large"> Large</label>
                </div>
                <div id="button-submit" >
                    <button type="submit" value="add-cart">AÃ±adir al carrito</button>
                </div>
            </form>
            <form id="form" action="/product-detail/<%= product.id %>?_method=DELETE" method="POST">
                <div class="buttons-delete-edit">
                    <!--<a id="button-add" href="/shopping-cart">Agregar al Carrito</a>-->
                    <a id="button-edit" href="/product-detail/edit-product/<%= product.id %>">Editar Producto</a>
                </div>
                <button id="button-delete" type="submit" value="delete-product">Eliminar Producto</button>
                <div class="form-div" id="form-compartir">
                    <h3>Compartir</h3>
                    <div class="redes">
                        <a href="https://www.instagram.com/" target="_blank"><i class="fab fa-instagram"></i></a>
                        <a href="https://www.facebook.com/" target="_blank"><i class="fab fa-facebook-square"></i></a>
                        <a href="https://twitter.com" target="_blank"><i class="fab fa-twitter-square"></i></a>
                        <a href="https://ar.pinterest.com/" target="_blank"><i class="fab fa-pinterest-square"></i></a>
                        <a href="https://web.whatsapp.com/" target="_blank"><i class="fab fa-whatsapp"></i></a>
                        <a href="https://www.tiktok.com/" target="_blank"><i class="fab fa-tiktok"></i></a>
                    </div>
                </div>
            </form>

