<section>
    <% for(let i=0; i < TheProducts.length && i < 4; i++){%>
        <div class="sectionBox-shadow">
            <img src="/img/productos/<%= TheProducts[i].image %>" alt="<%= TheProducts[i].name %>"
                title="<%= TheProducts[i].name %>">
            <div>
                <h2>
                    <%= TheProducts[i].category%>
                </h2>
                <p>
                    <%= TheProducts[i].description%>
                </p>
                <button>
                    <h5>Ver Más</h5>
                </button>
            </div>
        </div>
        <%}%>
</section>